    let _single_digit: i32 = count_digits(7);
    let _multi_digit: i32 = count_digits(123);
    let _large_number: i32 = count_digits(9876);
    
    // Test radix sort simulation
    let _empty_array: i32 = radix_sort_demo(0, 3);
    let _no_digits: i32 = radix_sort_demo(5, 0);
    let _single_element: i32 = radix_sort_demo(1, 2);
    let _small_array: i32 = radix_sort_demo(5, 3);
    let _large_array: i32 = radix_sort_demo(100, 4);
    
    println!("✅ Digit counting tested");
