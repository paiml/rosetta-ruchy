// Radix Sort 100% Coverage - v1.27.10 Compatible

fun count_digits(number: i32) -> i32 {
    if number <= 0 {
        return 0;
    }
    
    if number < 10 {
        return 1;
    }
    
    let mut digits: i32 = 0;
    let mut temp: i32 = number;
    
    while temp > 0 {
        digits = digits + 1;
        temp = temp / 10;
    }
    
    return digits;
}

fun radix_sort_demo(size: i32, max_digits: i32) -> i32 {
    if size <= 0 || max_digits <= 0 {
        return 0;
    }
    
    if size == 1 {
        return 1;
    }
    
    // Simulate radix sort passes
    let mut passes: i32 = 0;
    let mut digit_position: i32 = 1;
    
    while passes < max_digits {
        let mut bucket_count: i32 = 0;
        let mut i: i32 = 0;
        
        // Simulate bucketing phase
        while i < size {
            bucket_count = bucket_count + 1;
            i = i + 1;
        }
        
        // Simulate collection phase
        if bucket_count == size {
            passes = passes + 1;
            digit_position = digit_position * 10;
        }
    }
    
    return passes;
}

