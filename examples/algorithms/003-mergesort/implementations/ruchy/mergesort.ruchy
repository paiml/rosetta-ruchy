        // Check that equal elements maintain relative order
        assert_eq!(arr[0].1, 'a') // First 1
        assert_eq!(arr[1].1, 'c') // Second 1
        assert_eq!(arr[2].1, 'b') // First 2
        assert_eq!(arr[3].1, 'e') // Second 2
        assert_eq!(arr[4].1, 'd') // Only 3
        
        Ok(())
    }
    
