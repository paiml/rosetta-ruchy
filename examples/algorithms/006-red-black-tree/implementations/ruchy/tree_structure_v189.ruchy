// Simple tree representation using fixed-size array
// Maximum 20 elements for demonstration
fun create_empty_tree() -> [i32; 20] {
    [0; 20]  // All zeros initially, 0 represents empty slot
}

// Get actual size of tree (count non-zero elements)
fun get_tree_size(tree: [i32; 20]) -> i32 {
    let mut count = 0  // âœ… v1.89: explicit mut for counter
    let mut i = 0  // âœ… v1.89: explicit mut for loop counter
    
    while i < 20 {
        if tree[i] != 0 {
            count = count + 1  // âœ… v1.89: reassignment works with mut
        }
        i = i + 1  // âœ… v1.89: reassignment works with mut
    }
    
    count
}

// Check if tree is empty
fun is_empty_tree(tree: [i32; 20]) -> bool {
    get_tree_size(tree) == 0
}

// Get tree height (simplified calculation based on size)
fun calculate_tree_height(tree_size: i32) -> i32 {
    if tree_size <= 1 {
        return tree_size
    }
    
    // Simulate log2 calculation for balanced tree
    let mut height = 0  // âœ… v1.89: explicit mut for reassignment
    let mut size = tree_size  // âœ… v1.89: explicit mut for reassignment
    
    while size > 1 {
        size = size / 2  // âœ… v1.89: reassignment works with mut
        height = height + 1  // âœ… v1.89: reassignment works with mut
    }
    
    height + 1
}

// Insert value into tree (maintains sorted order)
fun tree_insert(tree: [i32; 20], value: i32) -> [i32; 20] {
    let mut new_tree = tree  // âœ… v1.89: explicit mut for array modification
    let size = get_tree_size(new_tree)
    
    // If tree is full, return unchanged
    if size >= 20 {
        return new_tree
    }
    
    // If empty, insert at beginning
    if size == 0 {
        new_tree[0] = value
        return new_tree
    }
    
    // Find insertion position to maintain sorted order
    let mut insert_pos = 0  // âœ… v1.89: explicit mut for position tracking
    let mut found_position = false  // âœ… v1.89: explicit mut for flag
    
    let mut i = 0  // âœ… v1.89: explicit mut for loop counter
    while i < size && !found_position {
        if value <= new_tree[i] {
            insert_pos = i  // âœ… v1.89: reassignment works with mut
            found_position = true  // âœ… v1.89: reassignment works with mut
        } else {
            insert_pos = i + 1  // âœ… v1.89: reassignment works with mut
        }
        i = i + 1  // âœ… v1.89: reassignment works with mut
    }
    
    // Shift elements to make room
    let mut j = size  // âœ… v1.89: explicit mut for loop counter
    while j > insert_pos {
        new_tree[j] = new_tree[j - 1]
        j = j - 1  // âœ… v1.89: reassignment works with mut
    }
    
    // Insert new value
    new_tree[insert_pos] = value
    
    new_tree
}

// Search for value in tree
fun tree_search(tree: [i32; 20], target: i32) -> bool {
    let size = get_tree_size(tree)
    
    // Binary search through sorted tree representation
    if size == 0 {
        return false
    }
    
    let mut left = 0  // âœ… v1.89: explicit mut for reassignment
    let mut right = size - 1  // âœ… v1.89: explicit mut for reassignment
    
    while left <= right {
        let mid = left + (right - left) / 2
        
        if tree[mid] == target {
            return true
        } else if tree[mid] < target {
            left = mid + 1  // âœ… v1.89: reassignment works with mut
        } else {
            if mid == 0 {
                break
            }
            right = mid - 1  // âœ… v1.89: reassignment works with mut
        }
    }
    
    false
}

// Check if tree maintains sorted order (BST property)
fun validate_bst_property(tree: [i32; 20]) -> bool {
    let size = get_tree_size(tree)
    
    if size <= 1 {
        return true
    }
    
    // Check that elements are in sorted order
    let mut i = 0  // âœ… v1.89: explicit mut for loop counter
    while i < (size - 1) {
        if tree[i] > tree[i + 1] {
            return false
        }
        i = i + 1  // âœ… v1.89: reassignment works with mut
    }
    
    true
}

// Calculate theoretical operations for tree size
fun calculate_operations(tree_size: i32) -> i32 {
    if tree_size <= 1 {
        return 1
    }
    
    // O(log n) operations in balanced tree
    let mut operations = 0  // âœ… v1.89: explicit mut for reassignment
    let mut size = tree_size  // âœ… v1.89: explicit mut for reassignment
    
    while size > 0 {
        size = size / 2  // âœ… v1.89: reassignment works with mut
        operations = operations + 1  // âœ… v1.89: reassignment works with mut
    }
    
    operations
}

// Find minimum value
fun find_min(tree: [i32; 20]) -> i32 {
    let size = get_tree_size(tree)
    if size == 0 {
        return 0
    }
    tree[0]
}

// Find maximum value  
fun find_max(tree: [i32; 20]) -> i32 {
    let size = get_tree_size(tree)
    if size == 0 {
        return 0
    }
    tree[size - 1]
}

