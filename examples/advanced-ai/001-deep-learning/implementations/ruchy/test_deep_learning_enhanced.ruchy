// Helper functions
fun abs(x: i32) -> i32 {
    if x < 0 { -x } else { x }
}

// Simplified activation functions for testing
fun sigmoid(x: i32) -> i32 {
    if x > 5000 { 990 }
    else if x < -5000 { 10 }
    else { 500 + x / 10 }
}

fun relu(x: i32) -> i32 {
    if x > 0 { x } else { 0 }
}

fun relu_derivative(x: i32) -> i32 {
    if x > 0 { SCALE() } else { 0 }
}

fun tanh(x: i32) -> i32 {
    if x > 3000 { 950 }
    else if x < -3000 { -950 }
    else { (x * 800) / 3000 }
}

fun sigmoid_derivative(x: i32) -> i32 {
    let sig = sigmoid(x);
    (sig * (SCALE() - sig)) / SCALE()
}

