// Utility functions
fun sqrt_approx(x: i32) -> i32 {
    // Newton's method for square root
    if x <= 0 { return 0; }
    
    let mut guess = x / 2;
    if guess == 0 { guess = 1; }
    
    for _ in 0..10 {  // 10 iterations
        let new_guess = (guess + x / guess) / 2;
        if abs(new_guess - guess) < 10 {
            break;
        }
        guess = new_guess;
    }
    
    guess
}

fun abs(x: i32) -> i32 {
    if x < 0 { -x } else { x }
}

