// Helper function to print integers
fun print_int(n: i32) {
    if n == 0 {
        print("0");
    } else if n < 10 && n > 0 {
        if n == 1 { print("1"); }
        else if n == 2 { print("2"); }
        else if n == 3 { print("3"); }
        else if n == 4 { print("4"); }
        else if n == 5 { print("5"); }
        else if n == 6 { print("6"); }
        else if n == 7 { print("7"); }
        else if n == 8 { print("8"); }
        else if n == 9 { print("9"); }
    } else if n < 100 {
        print_int(n / 10);
        print_int(n % 10);
    } else {
        print("many");
    }
}