// Stream buffer for real-time processing
fun create_stream_buffer() -> (StreamBuffer2000, i32, i32) {
    let buffer = StreamBuffer2000 { data: [0.0; 2000] };  // Stream data buffer
    let head = 0;              // Write position
    let tail = 0;              // Read position
    (buffer, head, tail)
}

// Add data to stream buffer
fun stream_push(buffer: StreamBuffer2000, head: i32, tail: i32, value: f64) -> (StreamBuffer2000, i32, i32) {
    let mut new_buffer = buffer.data;  // âœ… v1.89: explicit mut for buffer modification
    let mut new_head = head;      // âœ… v1.89: explicit mut for head position
    
    if new_head < 2000 {
        new_buffer[new_head as usize] = value;
        new_head = new_head + 1;  // âœ… v1.89: reassignment works with mut
    }
    
    (StreamBuffer2000 { data: new_buffer }, new_head, tail)
}

// Sliding window average
fun sliding_window_average(buffer: StreamBuffer2000, head: i32, window_size: i32) -> Averages200 {
    let mut averages = Averages200 { data: [0.0; 200] };  // âœ… v1.89: explicit mut for averages array
    let mut avg_count = 0;          // âœ… v1.89: explicit mut for averages counter
    
    if window_size <= 0 || head <= 0 {
        return averages;
    }
    
    let actual_window_size = if window_size > 100 { 100 } else { window_size };
    
    let mut start_pos = 0;  // âœ… v1.89: explicit mut for window start position
    while start_pos + actual_window_size <= head && avg_count < 200 {
        let mut sum = 0.0;  // âœ… v1.89: explicit mut for window sum
        let mut i = 0;      // âœ… v1.89: explicit mut for window iteration
        
        while i < actual_window_size {
            let pos = start_pos + i;
            if pos < 2000 {
                sum = sum + buffer.data[pos as usize];  // âœ… v1.89: reassignment works with mut
            }
            i = i + 1;  // âœ… v1.89: reassignment works with mut
        }
        
        averages.data[avg_count as usize] = sum / (actual_window_size as f64);
        avg_count = avg_count + 1;  // âœ… v1.89: reassignment works with mut
        start_pos = start_pos + 1;  // âœ… v1.89: reassignment works with mut (overlapping windows)
    }
    
    averages
}

// Stream filtering with threshold
fun stream_filter(buffer: StreamBuffer2000, head: i32, threshold: f64) -> (StreamBuffer2000, i32) {
    let mut filtered = StreamBuffer2000 { data: [0.0; 2000] };  // âœ… v1.89: explicit mut for filtered buffer
    let mut filtered_count = 0;      // âœ… v1.89: explicit mut for filtered counter
    
    let mut i = 0;  // âœ… v1.89: explicit mut for stream iteration
    while i < head && i < 2000 && filtered_count < 2000 {
        let value = buffer.data.data[i as usize];
        if value > threshold {
            filtered.data[filtered_count as usize] = value;
            filtered_count = filtered_count + 1;  // âœ… v1.89: reassignment works with mut
        }
        i = i + 1;  // âœ… v1.89: reassignment works with mut
    }
    
    (filtered, filtered_count)
}

// Real-time anomaly detection
fun detect_anomalies(buffer: StreamBuffer2000, head: i32, z_threshold: f64) -> (AnomalyIndices500, i32) {
    let mut anomaly_indices = AnomalyIndices500 { data: [0; 500] };  // âœ… v1.89: explicit mut for anomaly positions
    let mut anomaly_count = 0;           // âœ… v1.89: explicit mut for anomaly counter
    
    if head < 10 {  // Need minimum data for statistics
        return (anomaly_indices, 0);
    }
    
    // Calculate running mean and standard deviation
    let mut mean = 0.0;  // âœ… v1.89: explicit mut for running mean
    let mut i = 0;       // âœ… v1.89: explicit mut for mean calculation
    
    while i < head && i < 2000 {
        mean = mean + buffer.data.data[i as usize];  // âœ… v1.89: reassignment works with mut
        i = i + 1;  // âœ… v1.89: reassignment works with mut
    }
    mean = mean / (head as f64);  // âœ… v1.89: reassignment works with mut
    
    // Calculate standard deviation
    let mut variance = 0.0;  // âœ… v1.89: explicit mut for variance calculation
    i = 0;  // Reset iterator
    
    while i < head && i < 2000 {
        let diff = buffer.data.data[i as usize] - mean;
        variance = variance + (diff * diff);  // âœ… v1.89: reassignment works with mut
        i = i + 1;  // âœ… v1.89: reassignment works with mut
    }
    variance = variance / (head as f64);  // âœ… v1.89: reassignment works with mut
    
    // Simple square root approximation
    let mut std_dev = variance;  // âœ… v1.89: explicit mut for std dev approximation
    let mut sqrt_iter = 0;       // âœ… v1.89: explicit mut for sqrt iterations
    while sqrt_iter < 5 {
        std_dev = (std_dev + variance / std_dev) / 2.0;  // âœ… v1.89: reassignment works with mut
        sqrt_iter = sqrt_iter + 1;  // âœ… v1.89: reassignment works with mut
    }
    
    // Detect anomalies using z-score
    i = 0;  // Reset for anomaly detection
    while i < head && i < 2000 && anomaly_count < 500 {
        let value = buffer.data.data[i as usize];
        let z_score = if std_dev > 0.0 { (value - mean) / std_dev } else { 0.0 };
        let abs_z_score = if z_score < 0.0 { -z_score } else { z_score };
        
        if abs_z_score > z_threshold {
            anomaly_indices.data[anomaly_count as usize] = i;
            anomaly_count = anomaly_count + 1;  // âœ… v1.89: reassignment works with mut
        }
        
        i = i + 1;  // âœ… v1.89: reassignment works with mut
    }
    
    (anomaly_indices, anomaly_count)
}

// Generate synthetic time series data
fun generate_time_series(size: i32, base_value: f64, noise_amplitude: f64) -> StreamBuffer2000 {
    let mut data = StreamBuffer2000 { data: [0.0; 2000] };  // âœ… v1.89: explicit mut for time series
    let actual_size = if size > 2000 { 2000 } else { size };
    
    // Simple pseudo-random generator for noise
    let mut seed = 12345;  // âœ… v1.89: explicit mut for random seed
    let mut i = 0;         // âœ… v1.89: explicit mut for generation loop
    
    while i < actual_size {
        // Generate pseudo-random noise
        seed = (seed * 1664525 + 1013904223) % 2147483647;  // âœ… v1.89: reassignment works with mut
        let noise = ((seed as f64) / 2147483647.0 - 0.5) * 2.0 * noise_amplitude;
        
        // Add trend and seasonal component
        let trend = (i as f64) * 0.01;
        let seasonal = ((i as f64) * 0.1).sin() * 5.0;
        
        data.data[i as usize] = base_value + trend + seasonal + noise;
        i = i + 1;  // âœ… v1.89: reassignment works with mut
    }
    
    data
}

