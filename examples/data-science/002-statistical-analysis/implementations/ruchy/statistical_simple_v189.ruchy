    while i < size && i < 1000 {
        data[i as usize] = (i + 1) as f64;
        i = i + 1;  // âœ… v1.89: reassignment works with mut
    }
    
    (data, size)
}

// Create regression test dataset
fun create_regression_dataset() -> ([f64; 1000], [f64; 1000], i32) {
    let mut x_data = [0.0; 1000];  // âœ… v1.89: explicit mut for x data
    let mut y_data = [0.0; 1000];  // âœ… v1.89: explicit mut for y data
    let size = 10;
    
    // Simple linear relationship: y = 2x + 1
    let mut i = 0;  // âœ… v1.89: explicit mut for loop counter
    while i < size && i < 1000 {
        x_data[i as usize] = (i + 1) as f64;
        y_data[i as usize] = 2.0 * ((i + 1) as f64) + 1.0;
        i = i + 1;  // âœ… v1.89: reassignment works with mut
    }
    
    (x_data, y_data, size)
}

